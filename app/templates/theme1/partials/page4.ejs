<div class="page">
    <img class="bg" src="<%= `file:///${dir}/images/page4.png` %>">

    <input type="hidden" id="char4Data" value= "<%= page4Chart %>">
    <div id="container" style="width: 800px; font-family: 'Almarai', sans-serif"></div>

    <div id="page4_tweet_num"><%= data.tweets_num %></div>
    <div class="pageNum"><%= pageNum %></div>
</div>

<script type="text/javascript">

    var char4Data = $('#char4Data').val();
    var dataArr = JSON.parse(char4Data);

    Highcharts.chart('container', {
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45
            },
            backgroundColor: "rgba(255, 255, 255, 0)",
            // plotBackgroundColor: 'rgba(221, 60, 132, 0)',
        },

        credits: {
            enabled: false
        },
        title: {
            text: ''
        },
        plotOptions: {
            pie: {
                innerSize: 100,
                depth: 45,
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    color: '#000',
                    format: '{point.percentage:.1f}% - {point.name}',
                    connectorWidth: 2,
                    useHTML: true,
                    style: {
                        fontSize: '15px',
                        fontFamily: 'Almarai',
                        // textShadow: false, //bug fixed IE9 and EDGE
                    },
                }
            }
        },
        colors: ['#05b098', '#a4ded9', '#f05973', '#fdd005'],
        series: [{
            data: dataArr
        }],
        tooltip: {
            enabled: false,
        }
    });
</script>